<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="dphillips">
        <createTable tableName="CUSTOMERS">
            <column name="ID" type="INT" autoIncrement="true" />
            <column name="CUSTNAME" type="VARCHAR(200)" />
            <column name="ADDRESS1" type="VARCHAR(200)" />
            <column name="ADDRESS2" type="VARCHAR(200)" />
            <column name="CITY" type="VARCHAR(200)" />
            <column name="PROVINCE" type="VARCHAR(200)" />
            <column name="POSTALCODE" type="VARCHAR(20)" />
            <column name="PHONE" type="VARCHAR(20)" />
        </createTable>
    </changeSet>
</databaseChangeLog>